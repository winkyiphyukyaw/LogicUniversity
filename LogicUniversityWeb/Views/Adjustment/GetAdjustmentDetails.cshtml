@{
    Layout = "~/Views/Shared/_Layout.cshtml"; ;
}

@{
    <body>
        <form method="post" action="@Url.Action("UpdateStatus","Adjustment")">
            <div class="main">
                <h3><b>Adjustment Detail</b></h3><br />
                <table  class="table  table-sm" cellspacing="0">
                    <thead class="thead-dark">
                        <tr>
                            <th>Item  Name</th>
                            <th>Discrepancy Qty</th>
                            <th> Reason</th>
                            <th>Discrepancy Status</th>
                            <th>Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var a in ViewBag.adjustDetails)
                        {
                            <tr>
                                <td>
                                    <input type="text" name="ItemName" value=" @a.ItemName" readonly />
                                </td>
                                <td>
                                    <input type="text" name="DiscrepancyQty" value=" @a.DiscrepancyQty" readonly />
                                </td>
                                <td>
                                    @a.Reason
                                    <input type="text" name="Reason" value="@a.Reason" readonly />
                                </td>
                                <td><input type="text" name="DiscrepancyStatus" id="status" value="@a.DiscrepancyStatus" onfocus="HideBorder" readonly /></td>
                                <td><input type="text" name="DiscrepencyID" value="@a.DiscrepencyID" readonly /></td>
                                <td>
                                    @a.Amount
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <input type="submit" value="Submit" onclick="Approveit()" />
            </div>
        </form>
    </body>

}
<script>

    function Approveit() {

        document.getElementById('status').value = "approve";

    }


</script>

