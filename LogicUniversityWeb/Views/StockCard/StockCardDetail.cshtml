@model LogicUniversityWeb.Models.StockCradDetails
@{
    ViewBag.Title = "StockCardDetail";
    var r = ViewBag.stockCardDetail;
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@{
    <body>
        @using (Html.BeginForm("UpdateQuantity", "Disbursement", FormMethod.Post))
        {
            <div class="main">
                <h3><b>Stock Card Detail</b></h3><br />
                <table class="table  table-sm" cellspacing="0">
                    <tr>
                        <th>Item ID</th>
                        <td>@r.ItemID</td>
                    </tr>
                    <tr>
                        <th>Item Name</th>
                        <td>@r.ItemName</td>
                    </tr>
                    <tr>
                        <th>UOM</th>
                        <td>@r.UOM</td>
                    </tr>
                    <tr>
                        <th>Category Name</th>
                        <td>@r.CategoryName</td>
                    </tr>
                </table>

                <table  class="table  table-sm" cellspacing="0">
                    <thead class="thead-dark">
                        <tr>
                            <th>Department Name</th>
                            <th>Quantity</th>
                            <th>Balance</th>
                        </tr>
                    </thead>
                    <tbody>
                       @* @foreach (var disTran in ViewBag.scDisbursementTran)
                        {
                            <tr>
                                <td>@disTran.Departmentname</td>
                                <td>@disTran.DeliveredQty</td>
                                <td>@disTran.Balance</td>
                            </tr>
                        }*@

                        @foreach (var supTran in ViewBag.incomingTran)
                        {
                            <tr>
                                <td>@supTran.SupplierName</td>
                                <td>@supTran.IncomingQty</td>
                                <td>@supTran.Balance</td>
                            </tr>

                        }
                    </tbody>
                </table>
            </div>

        }
    </body>

}



