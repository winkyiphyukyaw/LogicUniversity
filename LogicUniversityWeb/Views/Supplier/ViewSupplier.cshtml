@model LogicUniversityWeb.Models.Suppliers
@using LogicUniversityWeb.Models
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    <body>

        <div class="main">
            <h3><b>Supplier List</b></h3><br />
            <table id="dtBasicExample" class="table table-sm" cellspacing="0">
                <thead class="thead-dark">
                    <tr>
                        <th class="th-sm">Supplier ID</th>
                        <th class="th-sm">Supplier Name</th>
                        <th class="th-sm"></th>
                        <th class="th-sm"></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Suppliers item in ViewBag.supplierInfo)
                    {
                        <tr>

                            <td><input type="text" name="SupplierID"  onfocus="HideBorder" class="textboxx" value="@item.SupplierID" readonly></td>
                            <td><input type="text" name="SupplierName" onfocus="HideBorder" class="textboxx" value="@item.SupplierName" readonly> </td>


                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </body>
}



