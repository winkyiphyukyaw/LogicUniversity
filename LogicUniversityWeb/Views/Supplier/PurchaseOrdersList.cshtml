@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    <body>
        <div class="main">
            <h3><b>Purchase Order List</b></h3><br />
            <table class="table  table-sm" cellspacing="0">
                <thead class="thead-dark">
                    <tr>
                        <th>PurchaseOrderId</th>
                        <th>SupplierName</th>
                        <th>Item ID</th>
                        <th>Item Name</th>
                        <th>OrderQuantity</th>
                    </tr>
                </thead>

                @foreach (var c in ViewBag.orders)
                {
                    <tr>
                        <td>@c.PurchaseOrderID</td>
                        <td>@c.SupplierName</td>
                        <td>@c.ItemID</td>
                        <td>@c.ItemName</td>
                        <td>@c.OrderQuantity</td>
                    </tr>
                }
            </table>
        </div>
    </body>
}


