
@model LogicUniversityWeb.Models.Stationary
@using LogicUniversityWeb.Models;
@{
    ViewBag.Title = "ViewCatalogue";
    Users Userinfo = (Users)ViewData["Userinfo"];
}

@{
    <body>
        <div class="main">
            <h3><b>Stationery Catalogue</b></h3><br />
            <table id="dtBasicExample" class="table table-sm" cellspacing="0">
                <thead class="thead-dark">
                    <tr>
                        <th></th>
                        <th class="th-sm">Item Name</th>
                        <th class="th-sm">Unit Of Measure</th>
                        <th class="th-sm">Required Quantity</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Stationary item in ViewBag.prodList)
                    {
                        <tr>
                            @using (Html.BeginForm("Add2Cart", "DepartmentRep", FormMethod.Post))
                            {
                                <td><input type="text" name="itemID" class="ItemID" value="@item.ItemID"></td>
                                <td><input type="text" name="itemName" onfocus="HideBorder" class="textboxx" value="@item.ItemName" readonly> </td>
                                <td><input type="text" name="UOM" onfocus="HideBorder" class="textboxx" value="@item.UOM" readonly></td>
                                <td><input type="number" name="RequiredQuantity" min="1" max="100"> </td>
                                <td><input type="submit" class="button button1" value="ADD" onclick="addtocart(event)" /></td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </body>
}
<script>
    $(document).ready(function () {
        $('#dtBasicExample').DataTable();
        $('.dataTables_length').addClass('bs-select');
    });
</script>