@model LogicUniversityWeb.Models.DisbursementList
@using LogicUniversityWeb.Models
@{
    ViewBag.Title = "DisbursmentList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@{
    <body>
        <div class="main">
            <h3><b>Disbursement List</b></h3><br />
            <table id="dtBasicExample" class="table table-sm" cellspacing="0">
                <thead class="thead-dark">
                    <tr>
                        <th class="th-sm">DisbursementID</th>
                        <th class="th-sm">Disbursement Status</th>
                        <th class="th-sm">Collection Point</th>
                        <th class="th-sm"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (DisbursementList item in ViewBag.ListofDisbursement)
                    {
                        <tr>
                            @using (Html.BeginForm("ViewDisbursementDetail", "DepartmentRep", FormMethod.Post))
                            {
                                <td><input type="text" name="DisbursementID" onfocus="HideBorder" class="textboxx" value="@item.DisbursementID" readonly> </td>
                                <td><input type="text" name="DisbursementStatus" onfocus="HideBorder" class="textboxx" value="@item.DisbursementStatus" readonly> </td>
                                <td><input type="text" name="CollectionPint" onfocus="HideBorder" class="textboxx" value="@item.CollectionPoint" readonly /></td>
                                <td><input type="submit" class="button button1" value="View" /></td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </body>



}