@model LogicUniversityWeb.Models.Delegations
@using LogicUniversityWeb.Models
@{
    ViewBag.Title = "ViewDelegations";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

@{
    <body>
        <div class="main">
            <h3><b>Delegations</b></h3><br />
            <table id="dtBasicExample" class="table table-sm" cellspacing="0">
                <thead class="thead-dark">
                    <tr>
                        <th></th>
                        <th class="th-sm">Employee Name</th>
                        <th class="th-sm">Start Date</th>
                        <th class="th-sm">End Date</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Delegations item in ViewBag.delegationslist)
                    {
                        <tr>
                            @using (Html.BeginForm("RemoveDelegation", "DepartmentRep", FormMethod.Post))
                            {
                                <td><input type="text" name="DelegationID" class="ItemID" value="@item.DelegationID"></td>
                                <td><input type="text" name="Username" onfocus="HideBorder" class="textboxx" value="@item.Username" readonly> </td>
                                <td><input type="text" name="StartDate" onfocus="HideBorder" class="textboxx" value="@item.StartDate" readonly></td>
                                <td><input type="text" name="EndDate" onfocus="HideBorder" class="textboxx" value="@item.EndDate" readonly></td>
                                <td><input type="submit" class="cancelorder button1" value="Cancel" onclick="addtocart(event)" /></td>
                             }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </body>

    <body>

        <div class="divforsubmitform">
            <div align="right">
                @using (Html.BeginForm("DelegateEmployee", "DepartmentRep", FormMethod.Post))
                {

                    <input type="text" name="DeptID" class="ItemID" value="@ViewBag.DeptID">
                    <input type="submit" class="button button1" id="btnReorder" onclick="Reordered(event)" value="Delegate" />
                }
            </div>

        </div>
    </body>

}

