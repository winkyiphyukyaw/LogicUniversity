@model LogicUniversityWeb.Models.RequisitionList
@using LogicUniversityWeb.Models;
@{
    ViewBag.Title = "MyRequisitions";
    Users Userinfo = (Users)ViewData["Userinfo"];


}

@{
    <body>
        <div class="main">
            <h3><b>My Requisitions</b></h3><br />
            <table id="dtBasicExample" class="table table-sm" cellspacing="0">
                <thead class="thead-dark">
                    <tr>
                        <th class="th-sm">RequestID</th>
                        <th class="th-sm">Date Of Submission</th>
                        <th class="th-sm">Status of Request</th>
                        <th class="th-sm"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (RequisitionList item in ViewBag.ListofRequest)
                    {
                        <tr>
                            @using (Html.BeginForm("ViewRequestInfo", "DepartmentRep", FormMethod.Post))
                            {
                                <td><input type="text" name="RequisitionID" onfocus="HideBorder" class="textboxx" value="@item.RequisitionID" readonly> </td>
                                <td><input type="text" name="DateofSubmission" onfocus="HideBorder" class="textboxx" value="@item.DateofSubmission" readonly> </td>
                                <td><input type="text" name="statusOfRequest" onfocus="HideBorder" class="textboxx" value="@item.statusOfRequest" readonly></td>
                                <td><input type="submit" class="button button1" value="View" /></td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </body>

}