@model LogicUniversityWeb.Models.DisbursementList
@using LogicUniversityWeb.Models

@{
    ViewBag.Title = "DisbursementList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    <body>
        <div class="main">
            <h3><b>Disbursement List</b></h3><br />
            <table class="table  table-sm" cellspacing="0">
                <thead class="thead-dark">
                    <tr>
                        <th>Department Name</th>
                        <th>Status</th>
                        <th>Disbursement ID</th>
                        <th></th>
                        <th>Details</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (DisbursementList r in ViewBag.disbursementList)
                    {
                        <tr>
                            @using (Html.BeginForm("UpdateStatus", "Disbursement", FormMethod.Post))
                            {
                                <td><input type="text" name="Departmentname" class="textboxx" value="@r.Departmentname"></td>
                                <td><input type="text" name="DisbursementStatus" class="textboxx" value="@r.DisbursementStatus"></td>
                                <td><input type="text" name="DisbursementID" class="textboxx" value="@r.DisbursementID" /></td>
                                <td><input type="submit" value="Delivered" class="btn btn-primary" /></td>
                                @*  <td>@r.Departmentname</td>
                                      <td>@r.DateofSubmission</td>
                                       <td>@r.DisbursementStatus</td>
                                    <td> @Html.ActionLink("Delivered", "UpdateStatus", new { id = r.DisbursementID })</td>*@
                                <td><u><font color="blue">@Html.ActionLink("Details", "ViewDisbursementDetail", new { id = r.DisbursementID }, new { @class = "btn btn-primary" })</font></u></td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </body>
}


