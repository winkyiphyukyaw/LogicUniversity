@model LogicUniversityWeb.Models.Users
@{
    Layout = "~/Views/Shared/_LayoutForLogin.cshtml";
}
    <style>
        .logo {
            margin-left: 0px;
        }

        .button {   
    background-color: #2699FB;
    border: none;
    color: white;
    padding: 10px 12px;
    text-decoration: none;
    display: inline-block;
    font-size: 16px;
    margin: 2px 2px;
    cursor: pointer;
    width: 150px
}

.button1 {
    border-radius: 14px;
}
        .form {
            margin-left: 350px;
            margin-right: 150px;
            margin-top: 0px;
            /*border: 1px solid #000;*/
            padding: 50px;
            width:650px;
        }
        .btnlogin {
            background-color: #8e44ad;
            border-color: #8e44ad;
        }
        .field-validation-error {
            color: red;
            border-color:red;
        }
        tr, td {
            padding: 2px
        }

        .container {
            position: relative;
            border-radius: 5px;
            padding: 0px 0 30px 0;
        }

        input {
            width:auto;
            padding: 12px;
            border:solid;
            border-radius: 4px;
            margin: 5px 0;
            opacity: 0.85;
            display: inline-block;
            font-size: 17px;
            line-height: 20px;
            text-decoration: none;
        }

            input:hover {
                opacity: 1;
            }

            input[type=submit] {
                background-color: #4CAF50;
                color: white;
                cursor: pointer;
            }

                input[type=submit]:hover {
                    background-color: #45a049;
                  
                }

        table {
            position: center;
            width: 100%;
            margin: auto;
            padding: 0 50px;
            margin-top: 6px;
            height:150px;
        }
    
</style>
@{
    <body style="background-color:lightcyan">
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                <div class="item active">
                    <img src="~/Images/Untitled.png" alt="photo1" align="middle" style="width:100%;height:350px;">
                </div>

                <div class="item">
                    <img src="~/Images/1200x350-trinity-great-court-night.jpg" alt="photo2" style="width:100%;height:350px;">
                </div>

                <div class="item">
                    <img src="~/Images/freedom_canvas2.jpg" alt="photo3" style="width:100%;height:350px;">
                </div>
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        <br />
        

            @using (Html.BeginForm("Login", "Home", new { ReturnUrl = Request["ReturnUrl"] }, FormMethod.Post))
            {
                <div class="form">
                    <table align="center">
                        <tr>
                            <td>@Html.LabelFor(x => x.Username)</td>
                            <td>@Html.TextBoxFor(x => x.Username)</td>
                            <td>@Html.ValidationMessageFor(x => x.Username)</td>
                        </tr>
                        <tr>
                            <td>@Html.LabelFor(x => x.Passcode):</td>
                            <td>@Html.PasswordFor(x => x.Passcode)</td>
                            <td>@Html.ValidationMessageFor(x => x.Passcode)</td>
                        </tr>
                        <tr>
                           
                            <td colspan="2" align="center">
                            <br />
                            <input type="submit" value="Login" class="button button1">
                            </td>
                            
                        </tr>
                    </table>
                </div>
            }
       
    </body>
}
