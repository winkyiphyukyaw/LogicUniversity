<!DOCTYPE html>
<html>
<head>
    <title>Login</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <style>
        .logo
        {
            margin-left:0px;
        }
        .form
        {
            margin-right:150px;
        }
    </style>
</head>

<body style="background-color:lightcyan">
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div class="item active">
                <img src="~/photo1.jpg" alt="photo1"  align="middle" style="width:100%;height:280px;">
            </div>

            <div class="item">
                <img src="~/photo2.png" alt="photo2"  style="width:100%;height:280px;">
            </div>

            <div class="item">
                <img src="~/photo3.jpg" alt="photo3" style="width:100%;;height:280px;">
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <br />
    <div class="container">
        <div class="img"  style="float:left">
            <img src="~/logo.jpg" class="logo" alt="Avatar" style="width:350px;height:350px;">
        </div>
        <div style="float:right" class="form">
            <fieldset>
                <div class="form-group form-container">
                    <label>Username:</label>
                    <input type="text"  class="form-control"/>
                </div>
                <div class="form-group form-container">
                    <label>Password:</label>
                    <input type="password" class="form-control" />
                </div>
            </fieldset>
            <br />
            <button type="submit" class="btn btn-primary">Login</button>
        </div>
            

    </div>
</body>
</html>