@{ Layout = "~/Views/Shared/_Layout.cshtml";
}


@{
    <body>
        <div class="main">
            <h3><b>Requisition Detail</b></h3><br />
            <table class="table  table-sm" cellspacing="0">
                <thead class="thead-dark">
                    <tr>
                        <th>Item ID</th>
                        <th>Item  Name</th>
                        <th>Requisition Qty</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var r in ViewBag.rDetails)
                    {
                        <tr>
                            <td>@r.ItemID</td>
                            <td>@r.ItemName</td>
                            <td>@r.RequisitionQuantity</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </body>
}



